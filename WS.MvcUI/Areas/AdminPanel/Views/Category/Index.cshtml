<div class="row">
    <div class="col-12">
        <!-- Custom Tabs -->
        <div class="card">
            <div class="card-header d-flex p-0">
                <h3 class="card-title p-3">Kategori Yönetim</h3>
                <ul class="nav nav-pills ml-auto p-2">
                    <li class="nav-item"><a class="nav-link active" href="#tab_1" data-toggle="tab">Liste</a></li>
                    <li class="nav-item"><a class="nav-link" href="#tab_2" data-toggle="tab">Yeni</a></li>
                </ul>
            </div>
            <div class="card-body">
                <div class="tab-content">
                    <div class="tab-pane active" id="tab_1">


                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>#</th>
                                    <th>Adı</th>
                                    <th>Açıklama</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <img src="data:image/png;base64,@item.Base64Picture" style="width:150px;" />
                                        </td>
                                        <td>
                                            <img src="@item.PicturePath" style="width:150px;" />
                                        </td>
                                        <td>@item.CategoryName</td>
                                        <td>@item.Description</td>
                                        <td>
                                            <button type="button" class="btn btn-warning btnEdit"
                                                    categoryid="@item.CategoryId">
                                                Düzenle
                                            </button>
                                        </td>
                                        <td>
                                            <button class="btn btn-danger btnDelete"
                                                    categoryid="@item.CategoryId">
                                                Sil
                                            </button>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                           
                        </table>



                    </div>
                    <div class="tab-pane" id="tab_2">
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Yeni Kategori Kayıt Formu</h3>
                            </div>
                            <form>
                                <div class="card-body">
                                    <div class="form-group">
                                        <label>Adı</label>
                                        <input type="text" class="form-control" id="txtCategoryName" placeholder="Kategori Adı">
                                    </div>
                                    <div class="form-group">
                                        <label>Açıklama</label>
                                        <textarea id="txtDescription" class="form-control"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleInputFile">Resim</label>
                                        <div class="input-group">
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" id="fuCategoryImage">
                                                <label class="custom-file-label" for="exampleInputFile">Resim Seçiniz</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <button id="btnSave" type="button" class="btn btn-primary">Kaydet</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<div class="modal fade" data-backdrop="static" id="divEditCategory" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">&times;</button>
            </div>
            <div class="modal-body">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Kategori Düzenleme Formu</h3>
                    </div>
                    <form>
                        <input type="hidden" id="hfCategoryId" />

                        <div class="card-body">
                            <div class="form-group">
                                <label>Adı</label>
                                <input type="text" class="form-control" id="txtCategoryNameEdit" placeholder="Kategori Adı">
                            </div>
                            <div class="form-group">
                                <label>Açıklama</label>
                                <textarea id="txtDescriptionEdit" class="form-control"></textarea>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputFile">Resim</label>
                                <div class="input-group">
                                    <div class="custom-file">
                                        <input type="file" class="custom-file-input" id="fuCategoryImageEdit">
                                        <label class="custom-file-label" for="exampleInputFile">Resim Seçiniz</label>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label>Kategori Resmi</label>
                                <img id="imgCategoryPhotoEdit" style="width:150px;" />
                            </div>
                        </div>
                        <div class="card-footer">
                            <button id="btnEdit" type="button" class="btn btn-primary">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>